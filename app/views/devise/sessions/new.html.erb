<div class="top-content">
  <div class="inner-bg">
      <div class="container">
          <div class="row">
              <div class="col-sm-6 col-sm-offset-3 form-box">
                <div class="form-top">
                  <div class="form-top-left">
                    <h3>Login to our site</h3>
                    <p class="unsigned-user-paragraph">Enter your username and password to log on:</p>
                  </div>
                  <div class="form-top-right">
                    <i class="fa fa-1x fa-lock"></i>
                  </div>
                  </div>
                  <div class="form-bottom">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="form-group">
                        <%= f.label :email, :class => "sr-only", :for => "form-username" %>
                        <%= f.text_field :email, autofocus: true, placeholder: "email@domain.com", 
                        :class => "form-username form-control" %>
                      </div>
                      <div class="form-group">
                        <%= f.label :password, :class => "sr-only", :for => "form-password" %>
                        <%= f.password_field :password, autocomplete: "off", 
                            placeholder: "Password...", :class => "form-password form-control" %>
                      </div>
                      <% if devise_mapping.rememberable? -%>
                        <div class="form-group">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end -%>

                      <div class="actions">
                        <%= f.button :submit, class: 'btn btn-success' do %>
                          Sign in!
                        <% end %>
                      </div>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>